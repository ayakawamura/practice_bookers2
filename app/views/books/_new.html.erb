<h2 class="pt-3">New book</h2>

<%= form_with model:book ,local: true do |f|%>
  <div class="pb-3">
    <%= f.label :title %><br/>
    <%= f.text_field :title ,class:"form-control" %>
  </div>
  <div class="pb-3">
    <%= f.label :opinion %><br>
    <%= f.text_area :body ,class:"form-control" %>
  </div>
  <div>
    <%= f.submit "Create Book" ,class:"btn btn-success"%>
  </div>
<%end%>